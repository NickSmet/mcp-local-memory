{
  "name": "mcp-local-memory",
  "version": "0.4.0",
  "description": "Lightweight MCP memory server with sqlite-based vector search and context tagging",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mcp-local-memory": "./dist/main.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "npx mcp-proxy --port 3133 --server stream --stateless --shell \"node dist/index.js\"",
    "start:stdio": "node dist/index.js",
    "prepare": "npm run build",
    "test": "npm run build",
    "cleanup:all": "tsx scripts/cleanup-all.ts"
  },
  "keywords": [
    "mcp",
    "memory",
    "vector-search",
    "sqlite",
    "llm",
    "ai",
    "model-context-protocol",
    "embeddings"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikolai-smetannikov/mcp-local-memory.git"
  },
  "homepage": "https://github.com/nikolai-smetannikov/mcp-local-memory#readme",
  "bugs": {
    "url": "https://github.com/nikolai-smetannikov/mcp-local-memory/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.5",
    "nanoid": "^5.0.0",
    "openai": "^4.73.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.10.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.9.1",
    "chalk": "^5.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
